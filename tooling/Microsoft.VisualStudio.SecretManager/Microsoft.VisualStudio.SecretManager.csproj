    <PackageReference Include="Microsoft.VisualStudio.ComponentModelHost" Version="15.0.26606" />
    <PackageReference Include="Microsoft.VisualStudio.ProjectSystem.Analyzers" Version="16.0.201-pre-g7d366164d0" />
